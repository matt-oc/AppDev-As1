<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="org.wit.hillfort.views.hillfort.HillfortView"
  tools:layout_editor_absoluteY="25dp">

  <android.support.design.widget.AppBarLayout
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:fitsSystemWindows="true"
    app:elevation="0dip"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
      android:id="@+id/toolbarAdd"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:titleTextColor="@color/colorPrimary" />
  </android.support.design.widget.AppBarLayout>

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/titleLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="20dp"
      android:clickable="false"
      android:contextClickable="false"
      android:gravity="center_horizontal"
      android:text="@string/hint_hillfortTitle"
      app:layout_constraintBottom_toTopOf="@+id/hillfortTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.514"
      app:layout_constraintStart_toStartOf="parent" />

    <EditText
      android:id="@+id/hillfortTitle"
      android:layout_width="364dp"
      android:layout_height="39dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="36dp"
      android:inputType="text"
      android:maxLength="25"
      android:maxLines="1"
      android:padding="8dp"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/descriptionLabel"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.258"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/descriptionLabel"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:clickable="false"
      android:contextClickable="false"
      android:gravity="center_horizontal"
      android:text="@string/hint_hillfortDescription"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.314" />

    <EditText
      android:id="@+id/description"
      android:layout_width="356dp"
      android:layout_height="41dp"
      android:layout_marginTop="16dp"
      android:inputType="text"
      android:maxLength="25"
      android:maxLines="1"
      android:padding="8dp"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/descriptionLabel" />

    <CheckBox
      android:id="@+id/hillfortVisited"
      android:layout_width="85dp"
      android:layout_height="32dp"
      android:layout_marginStart="36dp"
      android:text="@string/visited"
      app:layout_constraintBottom_toTopOf="@+id/notes"
      app:layout_constraintEnd_toStartOf="@+id/dateVisited"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/description"
      app:layout_constraintVertical_bias="0.18" />

    <EditText
      android:id="@+id/dateVisited"
      android:layout_width="150dp"
      android:layout_height="38dp"
      android:layout_marginStart="120dp"
      android:layout_marginEnd="8dp"
      android:gravity="center_horizontal"
      android:hint="@string/hint_date_visited"
      android:inputType="date"
      android:textSize="12sp"
      app:layout_constraintBottom_toTopOf="@+id/notes"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/hillfortVisited"
      app:layout_constraintTop_toBottomOf="@+id/description"
      app:layout_constraintVertical_bias="0.186" />

    <TextView
      android:id="@+id/notesLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:clickable="false"
      android:contextClickable="false"
      android:gravity="center_horizontal"
      android:text="@string/hint_hillfortNotes"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <EditText
      android:id="@+id/notes"
      android:layout_width="374dp"
      android:layout_height="wrap_content"
      android:inputType="text|textMultiLine"
      android:maxLength="1000"
      android:maxLines="20"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/hillfortImage"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/notesLabel"
      app:layout_constraintVertical_bias="0.172" />

    <Button
      android:id="@+id/chooseImage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorAccent"
      android:padding="8dp"
      android:text="@string/button_addImage"
      android:textColor="@color/colorPrimary"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/hillfortImage"
      app:layout_constraintStart_toStartOf="parent" />

    <ImageView
      android:id="@+id/hillfortImage"
      android:layout_width="206dp"
      android:layout_height="189dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:description="@string/descriptionHfImage"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/ic_launcher_background" />

    <Button
      android:id="@+id/hillfortLocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorAccent"
      android:padding="8dp"
      android:stateListAnimator="@null"
      android:text="@string/button_location"
      android:textColor="@color/colorPrimary"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/chooseImage"
      app:layout_constraintEnd_toStartOf="@+id/hillfortImage"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />

    <Button
      android:id="@+id/btnAdd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:layout_marginEnd="12dp"
      android:layout_marginBottom="16dp"
      android:background="@color/colorAccent"
      android:padding="8dp"
      android:stateListAnimator="@null"
      android:text="@string/button_addHillfort"
      android:textColor="@color/colorPrimary"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/hillfortLocation"
      app:layout_constraintEnd_toStartOf="@+id/hillfortImage"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />


  </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>